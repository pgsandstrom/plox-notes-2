{
  "name": "plox-notes-2",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "docker-build": "docker compose build --no-cache",
    "docker-up": "docker compose up",
    "format": "prettier --write \"{,!(.next|dist|node_modules)/**/}!(package-lock).{json,md,js,jsx,ts,tsx,css,scss}\"",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx --fix .",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm run typecheck",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/lodash": "4.14.191",
    "@types/node": "16.0.3",
    "@types/pg": "8.6.6",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "@types/uuid": "8.3.4",
    "cross-env": "7.0.3",
    "husky": "8.0.3",
    "lodash": "4.17.21",
    "next": "12.0.8",
    "pg": "8.10.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-flip-move": "3.0.5",
    "react-textarea-autosize": "8.3.3",
    "socket.io": "4.4.1",
    "socket.io-client": "4.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "12.1.0",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "lint-staged": "13.1.2",
    "nodemon": "2.0.21",
    "prettier": "2.8.4"
  },
  "lint-staged": {
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx --fix",
      "prettier --write"
    ]
  }
}
