{
  "name": "plox-notes-2",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "format": "prettier --write \"{,!(.next|dist|node_modules)/**/}!(package-lock).{json,md,js,jsx,ts,tsx,css,scss}\"",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx --fix .",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm run typecheck",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/lodash": "4.14.170",
    "@types/node": "16.0.0",
    "@types/pg": "8.6.0",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "@types/socket.io": "3.0.2",
    "@types/socket.io-client": "3.0.0",
    "@types/uuid": "8.3.1",
    "cross-env": "7.0.3",
    "lodash": "4.17.21",
    "next": "11.0.1",
    "pg": "8.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-flip-move": "3.0.4",
    "react-textarea-autosize": "8.3.3",
    "socket.io": "4.1.2",
    "socket.io-client": "4.1.2",
    "ts-node": "10.0.0",
    "typescript": "4.3.5",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.0",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.9",
    "prettier": "2.3.2"
  },
  "lint-staged": {
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx --fix",
      "prettier --write"
    ]
  }
}
